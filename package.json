    "sharp": "^0.33.0",
    "node-fetch": "^2.7.0",
    "xcode": "^3.0.1"
  },
  "optionalDependencies": {
    "jimp": "^0.22.0"
  },
  "cordova": {
    "id": "cordova-plugin-change-app-info",
    "platforms": [
      "ios",
      "android"
    ]
  },
  "keywords": [
